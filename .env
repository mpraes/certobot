# Development Environment Configuration
# Copy from .env.example and customize for your local development

# Database Configuration
DATABASE_URL=postgresql://certobot_user:certobot_password@localhost:5432/certobot

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Application Settings
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=dev-secret-key-change-in-production

# WhatsApp Business API Configuration (use test values for development)
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_ACCESS_TOKEN=test-token
WHATSAPP_PHONE_NUMBER_ID=test-phone-id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=test-webhook-token

# Groq API Configuration (add your real API key)
GROQ_API_KEY=your-groq-api-key-here
GROQ_MODEL=llama-3.1-70b-versatile

# Mock CRM Configuration
MOCK_CRM_URL=http://localhost:8001
MOCK_CRM_API_KEY=mock-api-key-for-testing

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_FORMAT=json

# Brazilian Localization
DEFAULT_LANGUAGE=pt-BR
DEFAULT_TIMEZONE=America/Sao_Paulo
DEFAULT_CURRENCY=BRL

# Security Settings
JWT_SECRET_KEY=dev-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# Session Configuration
SESSION_TIMEOUT_MINUTES=3
MAX_CPF_VALIDATION_ATTEMPTS=3
MAX_CONVERSATION_DURATION_MINUTES=3

# Payment Configuration
BOLETO_EXPIRATION_DAYS=7
MAX_DISCOUNT_PERCENTAGE=50
MIN_PAYMENT_AMOUNT=10.00